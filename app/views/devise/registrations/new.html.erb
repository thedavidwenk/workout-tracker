<h2 class="text-3xl text-center">Sign up to Workout Tracker</h2>

<div class="flex min-h-full flex-col justify-center px-2 lg:px-8">
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="border border-neutral-200 rounded-lg px-6 py-8">
        <%= f.error_notification %>

        <div class="flex space-x-4">
          <%= f.input :first_name,
                required: false,
                autofocus: true,
                input_html: {
                  autocomplete: "first_name",
                  class: "block w-full rounded-md bg-white/5
                          text-base text-dark outline-1 -outline-offset-1 
                          outline-white/10 placeholder:text-gray-500 
                          focus:outline-2 focus:-outline-offset-2 
                          focus:outline-blue-500 sm:text-sm/6"
                },
                label_html: { class: "block text-sm/6 font-medium text-gray-100" }
          %>

          <%= f.input :last_name,
                required: false,
                input_html: {
                  autocomplete: "last_name",
                  class: "block w-full rounded-md bg-white/5
                          text-base text-dark outline-1 -outline-offset-1 
                          outline-white/10 placeholder:text-gray-500 
                          focus:outline-2 focus:-outline-offset-2 
                          focus:outline-blue-500 sm:text-sm/6"
                },
                label_html: { class: "block text-sm/6 font-medium text-gray-100" }
          %>
        </div>

        <%= f.input :email,
              required: true,
              autofocus: true,
              input_html: {
                autocomplete: "email",
                class: "block w-full rounded-md bg-white/5 px-3 py-1.5 
                         text-dark outline-1 -outline-offset-1 
                        outline-white/10 placeholder:text-gray-500 
                        focus:outline-2 focus:-outline-offset-2 
                        focus:outline-blue-500 sm:text-sm/6"
              },
              label_html: { class: "block text-sm/6 font-medium text-gray-100" }
        %>

        <%= f.input :password,
              required: true,
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
              input_html: {
                autocomplete: "new-password",
                class: "block w-full rounded-md bg-white/5 px-3 py-1.5 
                        text-dark outline-1 -outline-offset-1 
                        outline-white/10 placeholder:text-gray-500 
                        focus:outline-2 focus:-outline-offset-2 
                        focus:outline-blue-500 sm:text-sm/6"
              },
              label_html: { class: "block text-sm/6 font-medium text-gray-100" }
        %>

        <%= f.input :password_confirmation,
              required: true,
              input_html: {
                autocomplete: "new-password",
                class: "block w-full rounded-md bg-white/5 px-3 py-1.5 
                        text-dark outline-1 -outline-offset-1 
                        outline-white/10 placeholder:text-gray-500 
                        focus:outline-2 focus:-outline-offset-2 
                        focus:outline-blue-500 sm:text-sm/6"
              },
              label_html: { class: "block text-sm/6 font-medium text-gray-100" }
        %>

        <div class="pt-2">
          <%= f.button :submit, "Sign up",
                class: "flex w-full justify-center rounded-md 
                        bg-blue-600 px-3 py-3 text-sm font-semibold text-white
                        hover:bg-blue-500
                        focus-visible:outline-2
                        focus-visible:outline-offset-2
                        focus-visible:outline-blue-500"
          %>
        </div>
      </div>
    <% end %>

    <p class="mt-5 text-center text-sm text-gray-400">
      Already have an account?
      <%= link_to "Login here",
            new_user_session_path,
            class: "font-semibold text-blue-400 hover:text-blue-300"
      %>
    </p>

  </div>
</div>
