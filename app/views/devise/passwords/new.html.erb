<h2 class="text-3xl text-center">Forgot your password?</h2>

<div class="flex min-h-full flex-col justify-center px-2 lg:px-8">
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">

    <%= simple_form_for(resource,
        as: resource_name,
        url: password_path(resource_name),
        html: { method: :post }
      ) do |f| %>

      <div class="space-y-6 border border-neutral-200 rounded-lg px-6 py-8">
        <%= f.error_notification %>

        <%= f.input :email,
              required: true,
              autofocus: true,
              label_html: { class: "block text-sm/6 font-medium text-gray-100" },
              input_html: {
                autocomplete: "email",
                class: "block w-full rounded-md bg-white/5 px-3 py-1.5 
                        text-base text-white outline-1 -outline-offset-1 
                        outline-white/10 placeholder:text-gray-500 
                        focus:outline-2 focus:-outline-offset-2 
                        focus:outline-blue-500 sm:text-sm/6"
              }
        %>

        <div>
          <%= f.button :submit, "Send reset instructions",
                class: "flex w-full justify-center rounded-md 
                        bg-blue-600 px-3 py-1.5 text-sm font-semibold text-white
                        hover:bg-blue-500
                        focus-visible:outline-2
                        focus-visible:outline-offset-2
                        focus-visible:outline-blue-500"
          %>
        </div>
      </div>

    <% end %>

    <p class="mt-5 text-center text-sm text-gray-400">
      Remembered your password?
      <%= link_to "Log in",
            new_user_session_path,
            class: "font-semibold text-blue-400 hover:text-blue-300"
      %>
    </p>

  </div>
</div>
