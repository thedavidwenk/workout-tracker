<h2 class="text-4xl text-center">Log in</h2>

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-6">
        
        <%= f.input :email,
              required: false,
              autofocus: true,
              input_html: {
                autocomplete: "email",
                class: "block w-full rounded-md bg-white/5 px-3 py-1.5 
                        text-base text-white outline-1 -outline-offset-1 
                        outline-white/10 placeholder:text-gray-500 
                        focus:outline-2 focus:-outline-offset-2 
                        focus:outline-indigo-500 sm:text-sm/6"
              },
              label_html: { class: "block text-sm/6 font-medium text-gray-100" }
        %>

        <%= f.input :password,
              required: false,
              input_html: {
                autocomplete: "current-password",
                class: "block w-full rounded-md bg-white/5 px-3 py-1.5 
                        text-base text-white outline-1 -outline-offset-1 
                        outline-white/10 placeholder:text-gray-500 
                        focus:outline-2 focus:-outline-offset-2 
                        focus:outline-indigo-500 sm:text-sm/6"
              },
              label_html: { class: "block text-sm/6 font-medium text-gray-100" }
        %>

        <% if devise_mapping.rememberable? %>
          <%= f.input :remember_me, as: :boolean %>
        <% end %>

        <div class="text-right">
          <%= link_to "Forgot password?",
                new_user_password_path,
                class: "text-sm font-semibold text-indigo-400 hover:text-indigo-300"
          %>
        </div>

        <div>
          <%= f.button :submit, "Log in",
                class: "flex w-full justify-center rounded-md bg-indigo-500
                        px-3 py-1.5 text-sm font-semibold text-white
                        hover:bg-indigo-400 focus-visible:outline-2
                        focus-visible:outline-offset-2 focus-visible:outline-indigo-500"
          %>
        </div>
      </div>
    <% end %>

    <p class="mt-5 text-center text-sm text-gray-400">
      Not a member?
      <%= link_to "Sign up now",
            new_user_registration_path,
            class: "font-semibold text-indigo-400 hover:text-indigo-300"
      %>
    </p>

  </div>
</div>