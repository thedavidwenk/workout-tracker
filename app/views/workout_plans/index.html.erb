<div>
  <div class="">
    <div>
      <h1 class="font-bold text-4xl">My Workout Plans</h1>
      <p>all your workout plans</p>
    </div>
    <div class="mt-6">
      <%= link_to "Create New Workout Plan →",
          new_workout_plan_path()
      %>
    </div>
  </div>
  <div>
    <% @workout_plans.each do |plan| %>
      <div class="mt-5">
        <h3 class="font-bold"><%= plan.name %></h3>
          <% plan.exercises.each do |exercise| %>
            <h3><%= exercise.name %></h3>
        <% end %>
        <%= link_to "Open Plan →", workout_plan_path(plan) %>
      </div>
    <% end %>
  </div>
</div>
