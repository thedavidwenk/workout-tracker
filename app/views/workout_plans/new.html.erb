<div>
  <h1 class="font-bold text-4xl">Create a new workout plan</h1>
  <%= simple_form_for @workout_plan do |f| %>
    <%= f.error_notification %>
    
    <%= f.input :name %>
    <%= f.input :comment %>

    <%= f.input :exercise_ids,
                as: :check_boxes,
                collection: @exercises,
                label_method: :name,
                value_method: :id,
                label: "Select Exercises" %>

    <%= f.submit "Create plan" %>
  <% end %>

</div>